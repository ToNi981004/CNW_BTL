
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Website Bán Điện Thoại</title>

    <!-- Google Fonts -->
    <link href="/Content/css/Titillium.css" rel='stylesheet' type='text/css'>
    <link href="/Content/css/Roboto.css" rel='stylesheet' type='text/css'>
    <link href="/Content/css/Raleway.css" rel='stylesheet' type='text/css'>
    <!-- Bootstrap Core CSS -->
    <link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="/Content/Admin/css/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="/Content/Admin/css/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/Content/Admin/css/startmin.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="/Content/Admin/css/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/Content/Admin/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/Content/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Content/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/Content/css/owl.carousel.css">
    <link rel="stylesheet" href="/Content/css/responsive.css">
    <link rel="stylesheet" href="/Content/css/style.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="user-menu">
                        <ul>
                            <li><i class="fa fa-github-alt"></i></li>
                            <li><a href="/My/NguoiDung/?IDKhachHang=@ViewBag.TaiKhoan">    @ViewBag.TaiKhoan</a></li>
                            <li><a href="~/My/Cart"><i class="fa fa-shopping-cart "></i>Giỏ Hàng Của Tôi</a></li>

                            <li><a href="~/My/Login"><i class="fa fa-sign-in "></i> Đăng Nhập</a></li>

                        </ul>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="header-right">
                        <ul class="list-unstyled list-inline">

                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#"><span class="key"><i class="fa fa-dollar"></i>Tiền Tệ :</span><span class="value">USD </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">USD</a></li>
                                    <li><a href="#">INR</a></li>
                                    <li><a href="#">GBP</a></li>
                                </ul>
                            </li>

                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#"><span class="key">Ngôn Ngữ :</span><span class="value">English </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">English</a></li>
                                    <li><a href="#">French</a></li>
                                    <li><a href="#">German</a></li>
                                </ul>
                            </li>
                           
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="./"><i class="fa fa-apple"></i></a></h1>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="shopping-item">
                        <a href="~/My/Cart">Giỏ Hàng  -   <span class="cart-amunt">$0</span> <i class="fa fa-shopping-cart"></i> <span class="product-count">5</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2><span></span></h2>
                        <p></p>
                        <div class="footer-social">
                            <a href="https://www.facebook.com/profile.php?id=100008537890181" target="_blank"><i class="fa fa-facebook"></i></a>
                            <a href="https://www.facebook.com/profile.php?id=100008537890181" target="_blank"><i class="fa fa-twitter"></i></a>
                            <a href="https://www.youtube.com/channel/UCouuabHqsTOTiGxIV0Jm2qw?view_as=subscriber" target="_blank"><i class="fa fa-youtube"></i></a>
                            <a href="https://www.facebook.com/profile.php?id=100008537890181" target="_blank"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title"><b>NGười Dùng</b></h2>
                        <ul>
                            <li><a href="~/My/Login"><i class="fa fa-user "></i>     Tài Khoản Của Tôi</a></li>
                            <li><a href="#"><i class="fa fa-history "></i>     Lịch Sử Đơn Hàng</a></li>
                            <li><a href="#"><i class="fa fa-heart  "></i>     Dang Sách Yêu Thích</a></li>
                            <li><a href="#"><i class="fa fa-phone  "></i>     Liên Hệ Nhà Cung Cấp</a></li>
                            <li><a href="#"><i class="fa fa-home  "></i>      Trang Nhất</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-menu">
                        <h2 class="footer-wid-title"><b>Thể Loại</b></h2>
                        <ul>
                            <li><a href="#"><i class="fa fa-mobile"></i>    Điện Thoại Di động</a></li>
                            <li><a href="#"><i class="fa fa-home"></i>    Trang Đầu</a></li>
                            <li><a href="#"><i class="fa fa-television "></i>     LED TV</a></li>
                            <li><a href="#"><i class="fa fa-laptop"></i>     Máy Vi Tính</a></li>
                            <li><a href="#"><i class="fa fa-navicon "></i>       Đồ Dùng</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-newsletter">
                        <h2 class="footer-wid-title"><b>Bản Tin</b></h2>
                        <p>Đăng ký nhận bản tin của chúng tôi và nhận các ưu đãi độc quyền mà bạn sẽ không tìm thấy bất cứ nơi nào khác trực tiếp đến hộp thư đến của bạn!</p>
                        <div class="newsletter-form">
                            <form action="#">
                                <input type="email" placeholder="Email của bạn?">
                                <input type="submit" value="Theo Dõi">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; 2015 uCommerce. All Rights Reserved. <a href="http://www.freshdesignweb.com" target="_blank">freshDesignweb.com</a></p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="footer-card-icon">
                        <i class="fa fa-cc-discover"></i>
                        <i class="fa fa-cc-mastercard"></i>
                        <i class="fa fa-cc-paypal"></i>
                        <i class="fa fa-cc-visa"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="/Content/js/owl.carousel.min.js"></script>
    <script src="/Content/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="/Content/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="/Content/js/main.js"></script>

    <!-- Slider -->
    <script type="text/javascript" src="/Content/js/bxslider.min.js"></script>
    <script type="text/javascript" src="/Content/js/script.slider.js"></script>
</body>
</html>
